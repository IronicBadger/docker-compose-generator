      - DHLEVEL=4096
      - TZ=Europe/London
      - VALIDATION=http
    mem_limit: 256m
  - service_name: plex
    image: plexinc/pms-docker
    container_name: plex
    network_mode: host
    mem_limit: 4096m
    volumes:
      - "{{ appdata_path }}/plex:{{ container_config_path }}"
      - "/mnt/storage:{{ container_data_path }}"
